<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="my.hhx.com.chunnews.modules.setting.ThemeActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/theme_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@color/colorPrimaryDark"
        android:background="?attr/colorPrimary"
        android:minHeight="?actionBarSize"
        android:paddingTop="20dp"
        app:popupTheme="@style/AppTheme.PopupOverlay"/>
    <FrameLayout
        android:paddingTop="10dp"
        android:id="@+id/theme_default_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="22dp"
            android:text="默认"
            android:textColor="@color/md_cyan_900_color_code"
            android:textSize="17sp" />
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="22dp"
            android:layout_gravity="right"
            android:background="@color/md_cyan_900_color_code"
             />

    </FrameLayout>
    <TextView
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"/>

    <!--黑色-->
