            android:layout_marginTop="8dp"
            android:layout_marginLeft="22dp"
            android:text="天空蓝"
            android:textColor="@color/md_light_blue_900_color_code"
            android:textSize="17sp" />
        <ImageView
            android:layout_width="16dp"
