<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_black_color_code"
    tools:context="my.hhx.com.chunnews.modules.wangyinews.mvp.WangyiPhotoActivity">

    <my.hhx.com.chunnews.ui.MyViewPager
        android:id="@+id/wangyi_photo_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#40000000"
        android:orientation="vertical"
        android:padding="6dp">

        <TextView
            android:id="@+id/wangyi_photo_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:textColor="@color/md_white_color_code"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/wangyi_photo_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:textColor="@color/md_white_color_code"
            android:textSize="13sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/wangyi_photo_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:paddingLeft="6dp"
                android:textColor="@color/md_white_color_code"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/wangyi_photo_download_iv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:paddingRight="6dp"
                android:src="@drawable/ic_file_download" />

        </FrameLayout>

    </LinearLayout>

</FrameLayout>
